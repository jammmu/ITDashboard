@{
    ViewData["Title"] = "Reports";
}
<h1>@ViewData["Title"]</h1>

<div style="width: 100%; height: 80vh;">
    <canvas id="myChart"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const ctx = document.getElementById('myChart');

    const data = {
        labels: ['طابعات جديدة', 'طابعات مستعملة', 'طابعات معطلة', 'أجهزة', 'ملحقات', 'تذاكر مفتوحة', 'تذاكر مغلقة', 'تذاكر قيد المراجعة'],
        datasets: [{
            label: 'التقارير',
            data: [5, 10, 2, 15, 8, 7, 11, 4], // Replace with actual data
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)', // New Printers
                'rgba(54, 162, 235, 0.2)', // Used Printers
                'rgba(255, 206, 86, 0.2)', // Broken Printers
                'rgba(75, 192, 192, 0.2)', // Devices
                'rgba(153, 102, 255, 0.2)', // Accessories
                'rgba(255, 159, 64, 0.2)', // Open Tickets
                'rgba(255, 99, 132, 0.2)', // Closed Tickets
                'rgba(54, 162, 235, 0.2)'  // In Review Tickets
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)',
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)'
            ],
            borderWidth: 1
        }]
    };

    const config = {
        type: 'bar',
        data: data,
        options: {
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        font: {
                            size: 14 // Adjust the font size as needed
                        }
                    }
                },
                x: {
                    ticks: {
                        font: {
                            size: 14 // Adjust the font size as needed
                        }
                    }
                }
            },
            // Add font options here
            plugins: {
                legend: {
                    labels: {
                        font: {
                            size: 14, // Adjust the font size as needed
                            family: 'Arial' // Adjust the font family as needed
                        }
                    }
                }
            }
        },
    };

    new Chart(ctx, config);
</script>
